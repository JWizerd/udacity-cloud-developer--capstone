{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "cwd": "${workspaceRoot}/backend",
      "runtimeArgs": [
        "run",
        "test:debug"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Frontend: Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "cwd": "${workspaceRoot}/frontend",
      "runtimeArgs": [
        "run",
        "test:unit:debug"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}